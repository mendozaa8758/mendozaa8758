            display: none; /* Initially hidden */
        }

        #copy-btn:hover {
            background-color: #27ae60;
        }

        button:active {
            transform: scale(0.98);
        }

        /* --- Team Display --- */
        #team-output {
            margin-top: 20px;
            min-height: 150px;
        }

        .pokemon-list {
            list-style: none;
            padding: 0;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .pokemon-card {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
