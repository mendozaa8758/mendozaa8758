    <div class="container">
        <h1>‚ú® Competitive Pok√©mon Team Builder</h1>
        <p class="instructions">
            **Instructions:** Select a format (e.g., OU) and a style (e.g., Balanced). Click 'Generate Team' to receive a balanced 6-Pok√©mon squad, complete with suggested EVs and Natures.
        </p>

        <div class="controls">
            <div>
                <label for="format-select">Format:</label>
                <select id="format-select">
                    </select>
            </div>
            
            <div>
                <label for="style-select">Style:</label>
                <select id="style-select">
                    </select>
            </div>
            
            <button id="dark-mode-toggle">Toggle Dark Mode üåô</button>
            <button id="generate-btn">Generate Team</button>
            <button id="copy-btn">Copy Team</button>
        </div>

        <hr>
        
        <div id="error-display" class="error-message" style="display: none;"></div>

        <div id="team-output">
            <div class="no-team-message">
                Click 'Generate Team' to build your first squad!
            </div>
        </div>

        <textarea id="export-text-area" readonly style="display: none;"></textarea>

    </div>

    <script>
        // =========================================================
        //                 1. DATA STORE (JSON)
        // =========================================================
        const POKEDEX = [
            { id: 1, name: "Ferrothorn", type: ["Grass", "Steel"], role: "Tank", category: "Physical", format: "OU" },
            { id: 2, name: "Landorus-T", type: ["Ground", "Flying"], role: "Pivot", category: "Physical", format: "OU" },
            { id: 3, name: "Toxapex", type: ["Poison", "Water"], role: "Tank", category: "Mixed", format: "OU" },
            { id: 4, name: "Dracovish", type: ["Water", "Dragon"], role: "Offensive", category: "Physical", format: "OU" },
            { id: 5, name: "Dragapult", type: ["Dragon", "Ghost"], role: "Sweeper", category: "Mixed", format: "OU" }, 
            { id: 6, name: "Clefable", type: ["Fairy"], role: "Support", category: "Special", format: "OU" },
            { id: 7, name: "Garchomp", type: ["Dragon", "Ground"], role: "Offensive", category: "Physical", format: "OU" },
            { id: 8, name: "Excadrill", type: ["Ground", "Steel"], role: "Sweeper", category: "Physical", format: "OU" },
            { id: 9, name: "Tapu Fini", type: ["Water", "Fairy"], role: "Pivot", category: "Special", format: "OU" },
            { id: 10, name: "Cinderace", type: ["Fire"], role: "Sweeper", category: "Physical", format: "OU" },
            { id: 11, name: "Regieleki", type: ["Electric"], role: "Sweeper", category: "Special", format: "VGC" },
            { id: 12, name: "Indeedee-F", type: ["Psychic", "Fairy"], role: "Support", category: "Special", format: "VGC" },
            { id: 13, name: "Urshifu-RS", type: ["Water", "Fighting"], role: "Offensive", category: "Physical", format: "VGC" },
            { id: 14, name: "Tornadus-I", type: ["Flying"], role: "Support", category: "Special", format: "VGC" },
            { id: 15, name: "Rillaboom", type: ["Grass"], role: "Offensive", category: "Physical", format: "VGC" },
            { id: 16, name: "Zacian-C", type: ["Fairy", "Steel"], role: "Offensive", category: "Physical", format: "VGC" },
            { id: 17, name: "Pikachu", type: ["Electric"], role: "Random", category: "Special", format: "Casual" },
            { id: 18, name: "Bidoof", type: ["Normal"], role: "Random", category: "Physical", format: "Casual" },
            { id: 19, name: "Magikarp", type: ["Water"], role: "Random", category: "Physical", format: "Casual" },
            { id: 20, name: "Snorlax", type: ["Normal"], role: "Tank", category: "Physical", format: "Casual" },
            { id: 21, name: "Volcarona", type: ["Bug", "Fire"], role: "Sweeper", category: "Special", format: "Balanced" },
            { id: 22, name: "Rotom-W", type: ["Electric", "Water"], role: "Pivot", category: "Special", format: "Balanced" },
            { id: 23, name: "Skarmory", type: ["Steel", "Flying"], role: "Tank", category: "Physical", format: "Balanced" },
            { id: 24, name: "Zapdos", type: ["Electric", "Flying"], role: "Pivot", category: "Special", format: "Balanced" },
        ];

        const FORMATS = {
            "OU": "Singles OverUsed (6v6)",
            "VGC": "VGC Doubles (4v4)",
            "Casual": "Random Casual (6v6)",
        };

        const STYLES = {
            "Balanced": "Balanced (Mix of Roles)",
            "Offensive": "Hyper Offensive (4+ Sweepers)",
            "Random": "Completely Random",
        };

        const STYLE_RULES = {
            "Balanced": ["Tank", "Pivot", "Sweeper", "Offensive", "Support"], 
            "Offensive": ["Sweeper", "Offensive"], 
            "Random": ["Tank", "Pivot", "Sweeper", "Offensive", "Support", "Random"] 
        };

        const TYPE_ADVANTAGES = {
            "Fighting": ["Normal", "Rock", "Steel", "Ice", "Dark"],
            "Ground": ["Poison", "Rock", "Steel", "Fire", "Electric"],
            "Water": ["Ground", "Rock", "Fire"],
            "Fire": ["Bug", "Steel", "Grass", "Ice"],
            "Electric": ["Water", "Flying"],
        };

        // =========================================================
        //                 2. CORE LOGIC FUNCTIONS 
        // =========================================================

        function getRandomElement(arr) {
            if (arr.length === 0) return null;
            const index = Math.floor(Math.random() * arr.length);
            return arr[index];
        }

        function hasEgregiousWeakness(currentTeam, newPokemon) {
            const offensiveTypes = ["Water", "Ground", "Fire", "Fighting"];
            let sharedWeaknesses = {};
            const entireTeam = [...currentTeam, newPokemon];

            for (const teamMember of entireTeam) {
                for (const attackerType of offensiveTypes) {
                    if (TYPE_ADVANTAGES[attackerType]) {
                        if (teamMember.type.some(t => TYPE_ADVANTAGES[attackerType].includes(t))) {
                            sharedWeaknesses[attackerType] = (sharedWeaknesses[attackerType] || 0) + 1;
                        }
                    }
                }
            }
            
            for (const type in sharedWeaknesses) {
                if (sharedWeaknesses[type] >= 4) {
                    return true;
                }
            }
            
            return false;
        }


        function generateTeam(formatKey, styleKey) {
            const pool = POKEDEX.filter(p => p.format === formatKey || p.format === "Balanced");
            if (pool.length < 6) {
                return [];
            }

            const team = [];
            const requiredRoles = STYLE_RULES[styleKey];
            const selectedIds = new Set();
            
            while (team.length < 6) {
                let candidate = null;
                let filteredCandidates = [];

                if (styleKey !== "Random") {
                    const availableRoles = requiredRoles.filter(role => !team.some(p => p.role === role));
                    if (availableRoles.length > 0) {
                        const targetRole = getRandomElement(availableRoles);
                        filteredCandidates = pool.filter(p => p.role === targetRole && !selectedIds.has(p.id));
                    }
                }

                if (filteredCandidates.length === 0) {
                    filteredCandidates = pool.filter(p => !selectedIds.has(p.id));
                }

                candidate = getRandomElement(filteredCandidates);
                
                if (!candidate) {
                    break;
                }

                if (hasEgregiousWeakness(team, candidate)) {
                    const candidateIndex = pool.indexOf(candidate);
                    if (candidateIndex > -1) {
                        pool.splice(candidateIndex, 1);
                    }
                    continue; 
                }

                team.push(candidate);
                selectedIds.add(candidate.id);
            }

            return team;
        }

        // =========================================================
        //                 3. DOM MANIPULATION / UX
        // =========================================================

        const htmlRoot = document.documentElement;
        const formatSelect = document.getElementById('format-select');
        const styleSelect = document.getElementById('style-select');
        const generateBtn = document.getElementById('generate-btn');
        const copyBtn = document.getElementById('copy-btn');
        const darkModeToggle = document.getElementById('dark-mode-toggle');
        const teamOutput = document.getElementById('team-output');
        const exportTextArea = document.getElementById('export-text-area');
        const errorDisplay = document.getElementById('error-display'); // New element

        let currentTeam = []; 

        /**
         * Shows an error message in the dedicated area.
         */
        function displayError(message) {
            errorDisplay.textContent = `‚ùå Error: ${message}`;
            errorDisplay.style.display = 'block';
            teamOutput.innerHTML = ''; // Clear team output on error
            copyBtn.style.display = 'none';
            exportTextArea.style.display = 'none';
        }

        /**
         * Hides any displayed error message.
         */
        function clearError() {
            errorDisplay.style.display = 'none';
            errorDisplay.textContent = '';
        }

        function populateDropdowns() {
            for (const key in FORMATS) {
                const option = document.createElement('option');
                option.value = key;
                option.textContent = FORMATS[key];
                formatSelect.appendChild(option);
            }
            for (const key in STYLES) {
                const option = document.createElement('option');
                option.value = key;
                option.textContent = STYLES[key];
                styleSelect.appendChild(option);
            }
        }


        /**
         * Renders the generated team and updates the export area.
         */
        function renderTeam(team) {
            currentTeam = team;
            teamOutput.innerHTML = ''; 

            if (team.length < 6) { // Check if a full team was generated
                const msg = team.length > 0 
                    ? `Could only generate ${team.length}/6 Pok√©mon due to lack of diverse options or strict type constraints. Try regenerating or choosing 'Random'.`
                    : "Could not generate a viable 6-Pok√©mon team with the current rules. Try another format/style.";
                teamOutput.innerHTML = `<div class="no-team-message">${msg}</div>`;
                copyBtn.style.display = 'none';
                exportTextArea.style.display = 'none';
                exportTextArea.value = '';
                return;
            }

            // Render team visually
            const ul = document.createElement('ul');
            ul.classList.add('pokemon-list');
            team.forEach(p => {
                const li = document.createElement('li');
                li.classList.add('pokemon-card');
                li.innerHTML = `
                    <h3>${p.name}</h3>
                    <p><strong>Role:</strong> ${p.role}</p>
                    <p><strong>Type:</strong> ${p.type.join(' / ')}</p>
                    <p><strong>Category:</strong> ${p.category}</p>
                `;
                ul.appendChild(li);
            });
            teamOutput.appendChild(ul);

            // Update Export Text (Dynamic EV/Nature)
            const exportText = team.map(p => {
                let evSpread = "";
                let nature = ""; 

                if (p.role === "Tank" || p.role === "Support" || p.role === "Pivot") {
                    evSpread = "252 HP / 252 SpD / 4 Def";
                    nature = "Calm"; // +SpD, -Atk
                } 
                else if (p.category === "Special") {
                    evSpread = "252 SpA / 4 Def / 252 Spe";
                    nature = "Modest"; // +SpA, -Atk
                } 
                else if (p.category === "Mixed") {
                    evSpread = "252 Spe / 128 Atk / 128 SpA"; 
                    nature = "Hasty"; // +Spe, -Def
                }
                else {
                    evSpread = "252 Atk / 4 Def / 252 Spe";
                    nature = "Adamant"; // +Atk, -SpA
                }
                
                return `${p.name} @ [Item Placeholder]\nAbility: [Ability Placeholder]\nEVs: ${evSpread}\nNature: ${nature}\n- [Move 1]\n- [Move 2]\n- [Move 3]\n- [Move 4]`;
            }).join('\n\n');
            
            exportTextArea.value = exportText;
            copyBtn.style.display = 'inline-block';
            exportTextArea.style.display = 'block';
        }

        /**
         * Handles the main "Generate Team" button click, with error catching.
         */
        function handleGenerateClick() {
            clearError();
            try {
                const selectedFormat = formatSelect.value;
                const selectedStyle = styleSelect.value;
                
                generateBtn.textContent = 'Generating...';
                generateBtn.disabled = true;

                // Simulate loading/generation delay
                setTimeout(() => {
                    const team = generateTeam(selectedFormat, selectedStyle);
                    renderTeam(team);
                    
                    generateBtn.textContent = 'Generate Again'; 
                    generateBtn.disabled = false;
                }, 300); 

            } catch (e) {
                // Handle unexpected code errors during generation (Robustness check)
                displayError(`An unexpected error occurred during generation: ${e.message}`);
                generateBtn.textContent = 'Generate Team';
                generateBtn.disabled = false;
                console.error(e);
            }
        }

        /**
         * Handles the "Copy Team" button click, with error catching for clipboard access.
         */
        function handleCopyClick() {
            if (currentTeam.length === 0) return;
            clearError();

            try {
                // Use modern clipboard API if available, fall back to execCommand
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    navigator.clipboard.writeText(exportTextArea.value).then(() => {
                        showCopySuccess();
                    }).catch(() => {
                        // Fallback attempt
                        fallbackCopy();
                    });
                } else {
                    fallbackCopy();
                }
            } catch (e) {
                displayError("Failed to access clipboard. Please copy the text manually from the box below.");
                console.error("Clipboard API failed:", e);
            }
            
            function fallbackCopy() {
                try {
                    exportTextArea.select();
                    if (!document.execCommand('copy')) {
                        throw new Error("execCommand failed.");
                    }
                    showCopySuccess();
                } catch (e) {
                    displayError("Copying failed! Your browser may restrict automatic clipboard access. Please manually copy the team from the text area.");
                    console.error("Fallback copy failed:", e);
                }
            }
            
            function showCopySuccess() {
                const originalText = copyBtn.textContent;
                copyBtn.textContent = 'Copied!';
                setTimeout(() => {
                    copyBtn.textContent = originalText;
                }, 1500);
            }
        }
        
        // =========================================================
        //                 4. DARK MODE LOGIC
        // =========================================================

        function toggleDarkMode() {
            if (htmlRoot.classList.contains('dark-mode')) {
                htmlRoot.classList.remove('dark-mode');
                localStorage.setItem('theme', 'light');
                darkModeToggle.textContent = 'Toggle Dark Mode üåô';
            } else {
                htmlRoot.classList.add('dark-mode');
                localStorage.setItem('theme', 'dark');
                darkModeToggle.textContent = 'Toggle Light Mode ‚òÄÔ∏è';
            }
        }
        
        function applySavedTheme() {
            const savedTheme = localStorage.getItem('theme');
            
            if (savedTheme === 'dark' || 
                (savedTheme === null && window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                htmlRoot.classList.add('dark-mode');
                darkModeToggle.textContent = 'Toggle Light Mode ‚òÄÔ∏è';
            } else {
                htmlRoot.classList.remove('dark-mode');
                darkModeToggle.textContent = 'Toggle Dark Mode üåô';
            }
        }


        // =========================================================
        //                 5. INITIALIZATION & LISTENERS
        // =========================================================

        document.addEventListener('DOMContentLoaded', () => {
            applySavedTheme();
            populateDropdowns();

            generateBtn.addEventListener('click', handleGenerateClick);
            copyBtn.addEventListener('click', handleCopyClick);
            darkModeToggle.addEventListener('click', toggleDarkMode); 

            generateBtn.textContent = 'Generate Team';
        });
    </script>
</body>
</html>
